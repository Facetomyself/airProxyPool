# API service
APP_HOST=0.0.0.0
APP_PORT=8000
API_HOST_PORT=18000
WORKERS=2
LOG_LEVEL=info

# Celery / Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
REDIS_URL=redis://redis:6379/0

# Schedules (seconds)
FETCH_INTERVAL=3600
HEALTHCHECK_INTERVAL=1800
HEALTHCHECK_WORKERS=10

# Storage
PROXYPOOL_DB=/app/data/data.db

# Worker health-check glider (binary path inside worker image)
GLIDER_BIN=/usr/local/bin/glider

# Glider exposed ports
GLIDER_HTTP_PORT=10707
GLIDER_ALT_PORT=10710

# Glider wrapper (optional overrides; defaults in image)
#GLIDER_CONFIG=/config/glider.conf
#RELOAD_INTERVAL=30

